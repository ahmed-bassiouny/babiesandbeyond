<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.ntam.babiesandbeyond">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.SignIn_UpActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.UserForgetPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.UserHomeActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.UserSendRequestActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.dialog.EventDialogActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.dialog.WorkShopDialogActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.activities.UserHistoryNotificationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activities.UserProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.dialog.ChangePasswordDialogActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.activities.NurseHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.dialog.QrCodeActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.dialog.RateUserDialogActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.dialog.ServiceDialogActivity"
            android:theme="@style/AppThemeDialog" />
        <activity
            android:name=".view.activities.CreateGroupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.activities.ChatActivity"></activity>
    </application>

</manifest>